FROM node:20-alpine AS base
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache git python3 make g++

# ── Dependencies ────────────────────────────────────────────────
FROM base AS deps
COPY package.json ./
COPY packages/agent/package.json ./packages/agent/
RUN npm install --workspace=packages/agent

# ── Build ───────────────────────────────────────────────────────
FROM deps AS builder
COPY packages/agent ./packages/agent
RUN npm run build -w packages/agent

# ── Runtime ─────────────────────────────────────────────────────
FROM node:20-alpine AS runner
WORKDIR /app

RUN apk add --no-cache git

# Copy built files and production deps
COPY --from=builder /app/packages/agent/dist ./dist
COPY --from=builder /app/packages/agent/package.json ./
COPY --from=builder /app/node_modules ./node_modules

# Copy entrypoint script
COPY docker/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

ENV NODE_ENV=production
EXPOSE 3001

# Create data directories owned by the non-root node user (uid 1000)
RUN mkdir -p /data/logs && chown -R node:node /data

# Switch to non-root user
USER node

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1)).on('error', () => process.exit(1))"

ENTRYPOINT ["entrypoint.sh"]
CMD ["node", "dist/index.js", "serve"]
